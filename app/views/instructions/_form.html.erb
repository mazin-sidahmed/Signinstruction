<%= form_for @instruction, :html => {:class => "form-horizontal"} do |f| %>
  <% if instruction.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(instruction.errors.count, "error") %> prohibited this instruction from being saved:</h2>

      <ul>
      <% instruction.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label for="instruction_word" class="col-sm-2 control-label">Word</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="instruction_word" placeholder="Word" name="instruction[word]">
    </div>
  </div>

  <div class="form-group">
    <label for="instruction_sign" class="col-sm-2 control-label">Sign</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="instruction_sign" placeholder="Sign" name="instruction[sign]">
    </div>
  </div>

  <div class="action pull-right">
    <%= f.submit %>
  </div>
<% end %>
